<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/nitrogen_settings_title" >

    <!-- Personalization -->
    <PreferenceCategory
        android:key="category_nitrogen_personalization"
        android:title="@string/nitrogen_menu_personalizaton" >

        <!-- Status Bar -->
        <PreferenceScreen
            android:key="status_bar_general_category"
            android:title="@string/status_bar_screen_title"
            android:fragment="com.android.settings.nitrogen.StatusBarSettings"
            android:icon="@drawable/ic_settings_statusbar"/>

        <!-- Buttons -->
        <PreferenceScreen
            android:key="button_settings_category"
            android:title="@string/button_pref_title"
            android:fragment="com.android.settings.ButtonSettings"
            android:icon="@drawable/ic_settings_buttons"/>

        <!-- Navigation Bar -->
        <PreferenceScreen
            android:key="navigation_bar_general_category"
            android:title="@string/navigation_bar_screen_title" 
            android:fragment="com.android.settings.nitrogen.NavigationBarSettings"
            android:icon="@drawable/ic_settings_navbar"/>

        <!-- Gestures -->
        <PreferenceScreen
            android:key="gestures_general_category"
            android:title="@string/gestures_title" 
            android:fragment="com.android.settings.nitrogen.GestureSettings"
            android:icon="@drawable/ic_settings_gestures"/>

        <!-- Lock Screen -->
        <PreferenceScreen
            android:key="lock_screen_general_category"
            android:title="@string/lockscreen_title" 
            android:fragment="com.android.settings.nitrogen.LockScreenSettings"
            android:icon="@drawable/ic_settings_lockscreens"/>

        <!-- Power Menu -->
        <PreferenceScreen
            android:key="power_menu_general_category"
            android:title="@string/power_menu_title" 
            android:fragment="com.android.settings.nitrogen.PowerMenuActions"
            android:icon="@drawable/ic_settings_powermenu"/>

        <!-- Misc -->
        <PreferenceScreen
            android:key="nitrogen_misc_category"
            android:title="@string/nitrogen_misc_category_title" 
            android:fragment="com.android.settings.nitrogen.MiscSettings"
            android:icon="@drawable/ic_settings_miscs"/>

    </PreferenceCategory>
</PreferenceScreen>
