<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="category_wakeup_options"
        android:title="@string/display_category_wakeup_options_title" >

    <SwitchPreference
        android:key="volume_rocker_wake"
        android:summary="@string/volume_rocker_wake_summary"
        android:title="@string/volume_rocker_wake_title" />

    </PreferenceCategory>

    <PreferenceCategory
         android:key="category_media_options"
         android:title="@string/display_category_media_options_title" >

     <SwitchPreference
        android:key="volbtn_music_controls"
        android:title="@string/volbtn_music_controls_title"
        android:summary="@string/volbtn_music_controls_summary"
        android:persistent="false"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="volume_keys_control_media_stream"
        android:title="@string/volume_keys_control_media_stream"
        android:summary="@string/volume_keys_control_media_stream_summary"
        android:defaultValue="false"
        android:persistent="false" />

    </PreferenceCategory>

     <PreferenceCategory
            android:key="category_cursor_options"
            android:title="@string/volume_rocker_other_title">

     <com.android.settings.nitrogen.SystemSettingSwitchPreference
        android:key="call_volume_answer"
        android:title="@string/volume_answer_call_title"
        android:summary="@string/volume_answer_call_summary"
        android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>
